<!DOCTYPE HTML>
<html>

<head>
    <style>
        html {font-size: 16px;font-family: Arial, Helvetica, sans-serif;line-height: 22px;}
        h3 {font-size: 22px;font-weight: 600;line-height: 1.3;}
        h4 {font-size: 18px;font-weight: 600;line-height: 1.3;}
        p {font-size: 16px;margin:0;line-height: 22px;}
        .card-3 {
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.19), 0 6px 6px rgba(0, 0, 0, 0.23);
        }

        .logo {
            background: url(${waterMark}) no-repeat;
            height: 70px;
            display: block;
            text-indent: -9999px;
        }
        .tableMainDiv {
            width: 100%;
            margin-top: 20px;
            margin-bottom: 0;
            /* border:2px solid #ddd; */
        }
        tr.tableHeadRow {
            border:0;
            border-top:2px solid #ddd;
            border-bottom:2px solid #ddd;
        }
        tr.tableHeadRow th {
            background-color: #f5f5f5;
            cursor: pointer;
            text-align: left;
            padding: 15px 15px;
            color: rgba(0, 0, 0, 0.6);
            font-weight: normal;
            border-right: 2px solid #ddd;
            border-top: 0;
            border-bottom: 0;
        }
        tr.tableHeadRow th:last-child {
            border-right: none;
        }

        /* .table-activity {
            width: 70%;
            margin-right: 3em;
            padding: 0;
        } */

        .activityname {
            width: 52%;
            padding: 0 4em 0 0;
        }

        .span {
            background: #FDECDE !important;
            margin: 2px 2px 8px;
            border: 1px solid rgba(0, 0, 0, 0.08);
            padding: 1px 8px;
            border-radius: 4px;
            word-break: break-word;
            display: block
        }

        .submittd {
            width: 24% !important;
            padding: 0.3em 0.6em;
        }

        .td {
            border-bottom: 1px solid black !important
        }

        .activityname {
            width: 52%;
            padding: 0 4em 0 0;
        }

        .activityspan {
            background: #FDECDE !important;
            margin: 2px 2px 8px;
            border: 1px solid rgba(0, 0, 0, 0.08);
            padding: 1px 8px;
            border-radius: 4px;
            word-break: break-word;
            display: block
        }

        .allocation-table {

            width: 100%;
        }

        .th {
            background-color: #f5f5f5;
            cursor: pointer;
            text-align: left;
            padding: 6px;
            color: rgba(0, 0, 0, 0.6);
            font-weight: normal;
            height: 31px;
        }

        /* .table-role {
            width: 22%;
            margin-right: 1em;
            padding: 0 !important;
        } */

        .userNameDiv {
            padding: 15px 15px;
            text-align: left;

            border: 2px solid #ddd;
            border-bottom: none;
        }
        h4.userName {
            padding: 0;
            font-size: 18px;
            font-weight: 600;
            text-align: left;
            margin:0;
        }
        p.userDesg {
            font-size: 16px;
        }

        th:nth-child(1) {
            /* width: 37.8%; */
            width: 37.3%;
        }

        th:nth-child(2) {
            /* width: 32.2%; */
            width: 39.2%;
        }

        th:nth-child(3) {
            width: 16.5%;
        }

        /* th:nth-child(4) {
            width: -1%;
        } */

        td:nth-child(1) {
            width: 20%
        }

        td:nth-child(2) {
            width: 33%
        }

        td:nth-child(3) {
            width: 15%
        }

        td:nth-child(4) {
            width: 18%
        }

        .table-role {
            width: 22%;
            padding: 15px 15px;
            vertical-align: top;
            /* margin-right: 1em;
            padding-left: 20px !important; */
        }

        .table-role b {
            margin-left: 2px;
        }

        /* .table-role span {
            padding: 15px 35px;
            word-break: break-word;
            display: inline-block;
        } */

        /* .table-activity {
            width: 70%;
            margin-right: 3em;
            padding: 0;
        } */

        .table-activity .activityname {
            width: 52%;
            /* padding: 1.5em 1em 1.5em 1em; */
            padding:15px 15px;
            vertical-align: top;
        }

        td.submittd {
            width: 24% !important;
            padding:15px 15px;
            vertical-align: top;
            /* padding: 0.3em 0.6em; */
        }

        ul {
            list-style-type: none;
            padding-left: 0 !important;
            margin: 0 !important;
        }

        li {
            border-bottom: 1px solid rgba(0, 0, 0, 0.16);
            margin-bottom: 10px;
            padding-bottom: 10px;
        }

        td {
            text-align: left;
            padding: 0px;
        }

        /* .outer-table {

        } */

        table {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }
        tr.tableContentRow {
            border-bottom: 2px solid #ddd;
        }
        tr.tableContentRow:last-child {
            border-bottom: 0;
        }
        .roleBox {
            padding-left:30px;
            padding-top: 15px;
        }
        #stripParent{ width:100%;}
        #stripParent div{ display:inline-block; width:33.3%;}
        #stripfirstDiv{ text-align:left;width: 48% !important; padding: 15px 15px;}
        #stripfirstDiv h3 {margin:0}
        #stripfirstDiv p {margin-top:10px; margin-bottom:0}
        #stripsecondDiv{ text-align:center;width: 15% !important; padding: 15px 15px;vertical-align: top;}
        #stripsecondDiv span {position: relative;vertical-align: -webkit-baseline-middle;}
        #stripthirdDiv { text-align:right; width: 25% !important;padding: 15px 15px;vertical-align: top;}
        #stripthirdDiv span { vertical-align: -webkit-baseline-middle;position: relative;}

        table.mainTable {
            border:2px solid #ddd;
        }
        table.customInnerTable tr {
            border-bottom: 2px solid #ddd;
        }
        table.customInnerTable tr:last-child {
            border-bottom: 0;
        }
        table.customInnerTable tr td {
            border:2px solid #ddd;
            border-top: 0;
            border-bottom: 0;
        }
        table.customInnerTable tr td:last-child {
            border-right: 0;
        }
    </style>
</head>

<body style="text-align: center">
        <div id="stripParent" style="border-style: dashed hidden;text-align: left;border-width: 2px;background-color: #f5f5f5;">
            <div id="stripfirstDiv">
            <h3>$name </h3>
            <p>Published at $printedTime</p>
            </div>
            <div id="stripsecondDiv">
                <span>Scan this QR code for the latest version</span>
            </div>
            <div id="stripthirdDiv">
                <span><img src=$qrcodeurl alt="QR code"></span>
            </div>
        </div>
        <div class="tableMainDiv">
            #foreach( $user in $users )
            <table class="allocation-table">
                <tr>
                    <div class="userNameDiv">
                        <h4 class="userName">$foreach.count . $user.userName</h4>
                        <p class="userDesg">Director - co-ordination</p>
                    </div>
                    <table id="custom-table" class="mainTable">
                        <tr class="tableHeadRow">
                            <th>Roles and competencies</th>
                            <th>Activities</th>
                            <th>Submit to</th>
                            <th>Submission from</th>
                        </tr>
                        <tr class="tableContentRow">
                            <td colspan="4">
                                <ul>
                                    #foreach($rc in $user.roleCompetencyList)
                                    <ul>
                                        <table id="custom-table">
                                            <tr>
                                                <td class="table-role">
                                                    <b>$rc.roleDetails.name</b>
                                                </td>
                                                <td class="table-activity">
                                                    <table id="custom-table" class="customInnerTable">
                                                        #foreach($a in $rc.roleDetails.childNodes)
                                                        <tr>
                                                            <td class="activityname">
                                                                <span>$a.description</span>
                                                            </td>
                                                            <td class="submittd">
                                                                #if($a.submittedToName)
                                                                  $a.submittedToName
                                                                #end
                                                            </td>
                                                            <td class="submittd">
                                                                #if($a.submittedFromName)
                                                                 $a.submittedFromName
                                                                #end
                                                            </td>
                                                        </tr>
                                                        #end
                                                    </table>
                                                </td>
                                            </tr>
                                        </table>
                                    </ul>
                                    #end
                                </ul>
                            </td>
                        </tr>
                    </table>
                </tr>
            </table>
            #if($foreach.hasNext)
            #else
            <div style="padding: 3% 0% 1% 0%;">
                <p>------------------------------------------------------ End of document ------------------------------------------------------</p>
            </div>
            #end
            #end
        </div>

</body>
</html>